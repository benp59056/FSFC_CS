package net.picklez.as.exercises.triangle;

import java.util.ArrayList;

import net.picklez.as.exercises.triangle.RightAngledTri.Row;

/**
 * @author Ben Pickering
 * @since 3 Nov 2015 | 10:15:09
 */




public class Triangle {
	
	ArrayList<Row> rows;
	
	public Triangle(int numRows) {
		rows = new ArrayList<Row>();
		
		for (int i = 0; i < numRows; i++) {
			rows.add(new Row(i));
		}
	}
	
	void print() {
		for (Row r : rows)
			r.print();
	}
}